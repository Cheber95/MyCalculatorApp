<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyButtonStyle">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/margin_buttons</item>
        <item name="fontFamily">sans-serif</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="backgroundTint">@color/blue_digits_color</item>
        <item name="cornerRadius">@dimen/corner_radius_buttons</item>
    </style>

    <style name="MyButtonStyle.Actions">
        <item name="backgroundTint">@color/red_actions_color</item>
    </style>

</resources>